# Environment Configuration for Python 3.13 Development
# Copy to .env to use

# ===== DATABASE =====
# Use SQLite instead of PostgreSQL (built-in to Python, no drivers needed)


# For production with PostgreSQL (when wheels available):
# DATABASE_URL=postgresql+asyncpg://user:pass@localhost/dbname

# ===== API KEYS =====
OPENAI_API_KEY=your_openai_api_key_here

# ===== AUTHENTICATION =====
BETTER_AUTH_SECRET=your_secret_key_here_change_in_production
JWT_SECRET_KEY=your_jwt_secret_here_change_in_production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=1440

# ===== PHASE 2 INTEGRATION =====
PHASE2_API_URL=http://localhost:8000
INTERNAL_SERVICE_TOKEN=dev_service_token_123

# ===== SERVER =====
HOST=0.0.0.0
PORT=8001
DEBUG=true

# ===== STORAGE =====
CHAT_STORAGE_TYPE=file
CHAT_STORAGE_PATH=data/chat-history
CHAT_RETENTION_DAYS=90
